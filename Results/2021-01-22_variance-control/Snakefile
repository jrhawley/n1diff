# ==============================================================================
# Configuration
# ==============================================================================
import pandas as pd
import os.path as path

CONFIG = pd.read_csv(
    "config.tsv",
    index_col=False,
    sep="\t"
)
SAMPLES = CONFIG.loc[:, "Comment[ENA_RUN]"].tolist()

DIR = {
    "fastq": "FASTQs",
    "align": "Aligned",
}

# ==============================================================================
# Meta Rules
# ==============================================================================
rule all:
    input:
        "sleuth.transcripts.tsv",
        "sleuth.genes.tsv",

# ==============================================================================
# Rules
# ==============================================================================
rule sleuth:
    input:
        script = "sleuth.male-female.R",
    output:
        "sleuth.transcripts.tsv",
        "sleuth.genes.tsv",
    shell:
        "Rscript {input.script}"
