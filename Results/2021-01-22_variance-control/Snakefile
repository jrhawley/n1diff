rule all:
    input:
        "sleuth.transcripts.tsv",
        "sleuth.genes.tsv",

# ==============================================================================
# Rules
# ==============================================================================
rule sleuth:
    input:
        script = "sleuth.male-female.R",
    output:
        "sleuth.transcripts.tsv",
        "sleuth.genes.tsv",
    shell:
        "Rscript {input.script}"
